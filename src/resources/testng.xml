        </classes>
    </test>

    <test name="SinTest">
        <classes>
            <class name="com.epam.atm.module4.test.SinTest"></class>
        </classes>
    </test>

    <test name="CosTest">
        <classes>
            <class name="com.epam.atm.module4.test.CosTest"></class>
        </classes>
    </test>

    <test name="TgTest">
        <classes>
            <class name="com.epam.atm.module4.test.TgTest"></class>
        </classes>
    </test>

    <test name="CtgTest">
        <classes>
